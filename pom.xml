<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://maven.apache.org/POM/4.0.0"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <artifactId>gestionnaire</artifactId>

  <build>
    <plugins>
      <!-- Tests -->
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <dependencies>
          <dependency>
            <artifactId>junit-jupiter-engine</artifactId>
            <groupId>org.junit.jupiter</groupId>
            <version>5.6.2</version>
          </dependency>
        </dependencies>
        <groupId>org.apache.maven.plugins</groupId>
        <version>3.0.0-M4</version>
      </plugin>
      <plugin>
        <artifactId>maven-failsafe-plugin</artifactId>
        <configuration>
          <argLine>
            --illegal-access=permit
          </argLine>
        </configuration>
        <groupId>org.apache.maven.plugins</groupId>
        <version>2.22.2</version>
      </plugin>
      <!-- Server -->
      <plugin>
        <artifactId>wildfly-jar-maven-plugin</artifactId>
        <configuration>
          <cli-sessions>
            <cli-session>
              <script-files>
                <script>./authentication.cli</script>
              </script-files>
            </cli-session>
          </cli-sessions>
          <feature-packs>
            <feature-pack>
              <location>wildfly@maven(org.jboss.universe:community-universe)
              </location>
            </feature-pack>
            <feature-pack>
              <artifactId>wildfly-datasources-galleon-pack</artifactId>
              <groupId>org.wildfly</groupId>
              <version>1.2.3.Final</version>
            </feature-pack>
          </feature-packs>
          <layers>
            <layer>jsf</layer>
            <layer>ejb-lite</layer>
            <layer>mail</layer>
            <layer>ee-security</layer>
            <layer>elytron</layer>
            <layer>jpa</layer>
            <layer>postgresql-datasource</layer>
            <layer>logging</layer>
          </layers>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>package</goal>
            </goals>
          </execution>
          <execution>
            <id>dev-watch</id>
          </execution>
          <execution>
            <id>run</id>
          </execution>
        </executions>
        <groupId>org.wildfly.plugins</groupId>
        <version>4.0.2.Final</version>
      </plugin>
      <!-- Coveralls -->
      <plugin>
        <artifactId>coveralls-maven-plugin</artifactId>
        <groupId>org.eluder.coveralls</groupId>
        <version>4.3.0</version>
        <!-- Not needed, using Travis CI -->
        <!--
        <configuration>
            <repoToken>yourcoverallsprojectrepositorytoken</repoToken>
        </configuration>
        -->
      </plugin>
      <plugin>
        <artifactId>jacoco-maven-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>prepare-agent</goal>
            </goals>
            <id>default-prepare-agent</id>
          </execution>
          <execution>
            <goals>
              <goal>prepare-agent-integration</goal>
            </goals>
            <id>default-prepare-agent-integration</id>
          </execution>
          <execution>
            <goals>
              <goal>report</goal>
            </goals>
            <id>default-report</id>
          </execution>
          <execution>
            <goals>
              <goal>report-integration</goal>
            </goals>
            <id>default-report-integration</id>
          </execution>
        </executions>
        <groupId>org.jacoco</groupId>
        <version>0.8.5</version>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <!-- Jakarta EE dependencies -->
    <dependency>
      <artifactId>jakarta.jakartaee-api</artifactId>
      <groupId>jakarta.platform</groupId>
      <scope>provided</scope>
      <version>8.0.0</version>
    </dependency>
    <dependency>
      <artifactId>javamelody-core</artifactId>
      <groupId>net.bull.javamelody</groupId>
      <version>1.82.0</version>
    </dependency>
    <dependency>
      <artifactId>primefaces</artifactId>
      <groupId>org.primefaces</groupId>
      <version>10.0.0</version>
    </dependency>
    <dependency>
      <artifactId>jsf-maven-util</artifactId>
      <groupId>de.chkal.jsf</groupId>
      <version>1.1</version>
    </dependency>
    <dependency>
      <artifactId>bootstrap</artifactId>
      <groupId>org.webjars</groupId>
      <version>3.4.1</version>
    </dependency>
    <dependency>
      <artifactId>metismenu</artifactId>
      <groupId>org.webjars.npm</groupId>
      <version>2.6.1</version>
    </dependency>
    <dependency>
      <artifactId>startbootstrap-sb-admin-2</artifactId>
      <groupId>org.webjars.npm</groupId>
      <version>3.3.7</version>
    </dependency>
    <dependency>
      <artifactId>spring-security-core</artifactId>
      <groupId>org.springframework.security</groupId>
      <version>5.2.1.RELEASE</version>
    </dependency>
    <dependency>
      <artifactId>lombok</artifactId>
      <groupId>org.projectlombok</groupId>
      <scope>provided</scope>
      <version>1.18.20</version>
    </dependency>
    <!-- Data Exporter -->
    <dependency>
      <artifactId>liquibase-core</artifactId>
      <groupId>org.liquibase</groupId>
      <version>4.3.5</version>
    </dependency>
    <dependency>
      <artifactId>poi</artifactId>
      <groupId>org.apache.poi</groupId>
      <version>4.1.1</version>
    </dependency>
    <dependency>
      <artifactId>poi-ooxml</artifactId>
      <groupId>org.apache.poi</groupId>
      <version>5.0.0</version>
    </dependency>
    <dependency>
      <artifactId>itext</artifactId>
      <exclusions>
        <exclusion>
          <artifactId>bcmail-jdk14</artifactId>
          <groupId>bouncycastle</groupId>
        </exclusion>
        <exclusion>
          <artifactId>bcprov-jdk14</artifactId>
          <groupId>bouncycastle</groupId>
        </exclusion>
        <exclusion>
          <artifactId>bctsp-jdk14</artifactId>
          <groupId>org.bouncycastle</groupId>
        </exclusion>
      </exclusions>
      <groupId>com.lowagie</groupId>
      <version>2.1.7</version>
    </dependency>
    <!-- End Data Exporter -->
    <dependency>
      <artifactId>commons-lang3</artifactId>
      <groupId>org.apache.commons</groupId>
      <version>3.12.0</version>
    </dependency>
    <!-- Tests -->
    <dependency>
      <artifactId>junit-jupiter-api</artifactId>
      <groupId>org.junit.jupiter</groupId>
      <scope>test</scope>
      <version>5.7.1</version>
    </dependency>
    <dependency>
      <artifactId>mockito-junit-jupiter</artifactId>
      <groupId>org.mockito</groupId>
      <scope>test</scope>
      <version>3.9.0</version>
    </dependency>
    <!-- End Tests -->
  </dependencies>
  <developers>
    <developer>
      <email>paolo@hubesco.com</email>
      <id>paoesco</id>
      <name>Paolo</name>
      <url>https://hubesco.com/blog</url>
    </developer>
  </developers>
  <groupId>fr.famivac</groupId>

  <inceptionYear>2015</inceptionYear>

  <modelVersion>4.0.0</modelVersion>

  <name>gestionnaire</name>
  <packaging>war</packaging>

  <properties>
    <additionalparam>-Xdoclint:none</additionalparam>
    <endorsed.dir>${project.build.directory}/endorsed</endorsed.dir>
    <failOnMissingWebXml>false</failOnMissingWebXml>
    <maven.compiler.source>11</maven.compiler.source>
    <maven.compiler.target>11</maven.compiler.target>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <skipUnitTests>false</skipUnitTests>
  </properties>

  <repositories>
    <repository>
      <id>jsf-maven-util-repo</id>
      <name>jsf-maven-util Repository</name>
      <url>http://chkal.github.com/jsf-maven-util/repository/</url>
    </repository>
  </repositories>

  <scm>
    <connection>scm:git:ssh://git@github.com/famivac/famivac-gestionnaire.git</connection>
    <developerConnection>scm:git:ssh://git@github.com/famivac/famivac-gestionnaire.git
    </developerConnection>
    <tag>HEAD</tag>
    <url>https://github.com/famivac/famivac-gestionnaire</url>
  </scm>

  <url>https://gestionnaire.famivac.fr</url>

  <version>2.0.0</version>

</project>
